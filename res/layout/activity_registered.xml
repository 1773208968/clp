<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/logtitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/acregistered_buycarreg"
            android:layout_width="100dp"
            android:layout_height="40.0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.0dip"
            android:background="#4472C4"
            android:text="买车注册"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/acregistered_sellingcarsreg"
            android:layout_width="100dp"
            android:layout_height="40.0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.0dip"
            android:background="#7f7f7f"
            android:text="卖车注册"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/acregistered_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="1.0dip"
            android:layout_weight="7"
            android:ems="11"
            android:gravity="center"
            android:hint="手机号码"
            android:inputType="phone" >
        </EditText>

        <Button
            android:id="@+id/acregistered_verification"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="center"
            android:text="验证"
            android:textColor="#009ad6"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/acregistered_Codes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_weight="1"
            android:ems="8"
            android:gravity="center"
            android:hint="验证码"
            android:inputType="textPersonName" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/acregistered_next"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="#ed7d31"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#ffffff" />

</LinearLayout>