<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- title -->

        <include layout="@layout/tileinclude" />

        <!-- 上1 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa"
            android:orientation="horizontal" >

            <!-- 左边圆形 -->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/yk" />

                <View
                    android:id="@+id/viewlfet"
                    android:layout_width="130dp"
                    android:layout_height="2dip"
                    android:layout_centerInParent="true"
                    android:background="#ed7d31" />

                <TextView
                    android:id="@+id/lefttoptext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/viewlfet"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="3dp"
                    android:text="00005702"
                    android:textColor="#7f7f7f"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/lefttoptext"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="2dp"
                    android:text="买车"
                    android:textColor="#ed7d31"
                    android:textSize="20sp" />
                <!-- 对称 买卖车信息 -->

                <TextView
                    android:id="@+id/leftbuttontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/viewlfet"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:text="00027056"
                    android:textColor="#7f7f7f"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/leftbuttontext"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="2dp"
                    android:text="卖车"
                    android:textColor="#00b050"
                    android:textSize="20sp" />
            </RelativeLayout>

            <!-- 右边圆形 -->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/yk" />

                <View
                    android:id="@+id/viewright"
                    android:layout_width="130dp"
                    android:layout_height="2dip"
                    android:layout_centerInParent="true"
                    android:background="#f2f2f2" />

                <TextView
                    android:id="@+id/rigthtoptext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/viewright"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="3dp"
                    android:text="00029702"
                    android:textColor="#7f7f7f"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/rigthtoptext"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/mima" />
                <!-- 对称 买卖车信息 -->

                <Button
                    android:id="@+id/rigthbuttonbu"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/viewright"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bgboder_red"
                    android:text="评估  > "
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 上2 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/home_buycar"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/boder_red" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="买车"
                        android:textColor="#ed7d31"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="私家车源"
                        android:textColor="#7f7f7f"
                        android:textSize="20sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_sellingcars"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/boder_green" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卖车"
                        android:textColor="#00b050"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全国竞拍"
                        android:textColor="#7f7f7f"
                        android:textSize="20sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <!-- 价格 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5万以内"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5-10万"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10-20万"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="全部"
                android:textColor="#00b050"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- 车类型 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SUV"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="商务车"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="面包车"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5年以内"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- 车品牌 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4" >

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/fenlei"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="大众"
                        android:textSize="16sp" />
                    <!-- 列分割线 -->

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/fenlei"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="宝马"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/fenlei"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="丰田"
                        android:textSize="16sp" />
                    <!-- 列分割线 -->

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/fenlei"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="奥迪"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:weightSum="4" >

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/fenlei"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="福特"
                        android:textSize="16sp" />
                    <!-- 列分割线 -->

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/fenlei"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="奔驰"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/fenlei"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="日产"
                        android:textSize="16sp" />
                    <!-- 列分割线 -->

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="全部"
                        android:textColor="#00b050"
                        android:textSize="16sp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="私家车源  |  车况担保"
                android:textColor="#7f7f7f"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="全部"
                android:textColor="#00b050"
                android:textSize="18sp" />
        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/home_item_imageleft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:src="@drawable/car_2x" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/home_item_imageleft"
                        android:layout_below="@id/home_item_imageleft"
                        android:layout_marginTop="40dp"
                        android:text="2013年车上牌|行驶6.2万公里" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/home_item_imageleft"
                        android:layout_below="@id/home_item_imageleft"
                        android:layout_marginTop="40dp"
                        android:text="重庆市"
                        android:textColor="#009ad6" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/home_item_imageleft"
                        android:layout_below="@+id/home_item_imageleft"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="北京现代索纳塔八|2013款|2.4L|自动豪华版车" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/home_item_imagerigth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:src="@drawable/car_2x" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/home_item_imagerigth"
                        android:layout_below="@+id/home_item_imagerigth"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="北京现代索纳塔八|2013款|2.4L|自动豪华版车" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/home_item_imagerigth"
                        android:layout_below="@id/home_item_imagerigth"
                        android:layout_marginTop="40dp"
                        android:text="2013年车上牌|行驶6.2万公里" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/home_item_imagerigth"
                        android:layout_below="@id/home_item_imagerigth"
                        android:layout_marginTop="40dp"
                        android:text="重庆市"
                        android:textColor="#009ad6" />
                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="关于" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="关于" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买车"
                    android:textColor="#ed7d31"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="的相关规则》"
                    android:textColor="#7f7f7f"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买车"
                    android:textColor="#00b050"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="的相关规则》"
                    android:textColor="#7f7f7f"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重庆奉公科技有限公司  渝ICP备14006796"
                android:textColor="#7f7f7f"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>